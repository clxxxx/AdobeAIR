<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp">

    <Button
        android:id="@+id/open_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="新建/打开"
        style="@style/myButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/convergence"/>

    <Button
        android:id="@+id/convergence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="会聚设置"
        style="@style/myButton"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/open_new"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add"/>

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="增加"
        style="@style/myButton"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/convergence"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reduce"/>

    <Button
        android:id="@+id/reduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="减少"
        style="@style/myButton"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/confirm"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确定"
        style="@style/myButton"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/reduce"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_img"/>

    <Button
        android:id="@+id/add_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="加图"
        style="@style/myButton"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/confirm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/binocular_vision"/>

    <Button
        android:id="@+id/binocular_vision"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="双视眼"
        style="@style/myButton"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/add_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>